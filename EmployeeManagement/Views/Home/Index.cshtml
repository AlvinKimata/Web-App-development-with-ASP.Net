@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewBag.Title = "Employee List";
 }
<div class="card deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/huggingface.png"
                 asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                   class="btn btn-primary">Display</a >
                <a href="@Url.Action("details", "home", new {id = employee.Id})"
                   class="btn btn-primary">Show</a>

                @Html.ActionLink("View", "details", "home", new {id = employee.Id})
                <a href="#" class="btn btn-primary">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
